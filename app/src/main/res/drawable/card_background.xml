<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="@color/shadow_light"/>
        </shape>
    </item>
    
    <!-- Main Glass Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient android:type="linear"
                android:startColor="@color/surface_glass"
                android:endColor="@color/glass_blue"
                android:angle="135"/>
            <stroke android:width="1dp" android:color="@color/transparent_white_30"/>
        </shape>
    </item>
    
    <!-- Glass Border -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="13dp"/>
            <stroke android:width="1dp" android:color="@color/transparent_white_20"/>
        </shape>
    </item>
    
    <!-- Inner Glow -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient android:type="radial"
                android:centerX="0.3" android:centerY="0.3"
                android:gradientRadius="60%"
                android:startColor="@color/glow_white"
                android:endColor="@color/transparent"/>
        </shape>
    </item>
    
    <!-- Primary Reflection Strip -->
    <item android:top="6dp" android:left="6dp" android:right="20dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_50"
                android:endColor="@color/transparent"
                android:angle="45"/>
        </shape>
    </item>
    
    <!-- Secondary Reflection -->
    <item android:top="20dp" android:left="20dp" android:right="6dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_30"
                android:endColor="@color/transparent"
                android:angle="225"/>
        </shape>
    </item>
    
</layer-list> 