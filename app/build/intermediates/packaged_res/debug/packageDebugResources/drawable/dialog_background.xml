<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/shadow_medium"/>
        </shape>
    </item>
    
    <!-- Main Glass Background -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp"/>
            <gradient android:type="linear"
                android:startColor="@color/surface_glass"
                android:endColor="@color/glass_purple"
                android:angle="135"/>
            <stroke android:width="1.5dp" android:color="@color/transparent_white_40"/>
        </shape>
    </item>
    
    <!-- Glass Border Enhancement -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/transparent_white_30"/>
        </shape>
    </item>
    
    <!-- Inner Glow -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="9dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient android:type="radial"
                android:centerX="0.4" android:centerY="0.3"
                android:gradientRadius="70%"
                android:startColor="@color/glow_white"
                android:endColor="@color/transparent"/>
        </shape>
    </item>
    
    <!-- Header Reflection -->
    <item android:top="8dp" android:left="8dp" android:right="24dp" android:bottom="40dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_50"
                android:endColor="@color/transparent"
                android:angle="45"/>
        </shape>
    </item>
    
    <!-- Secondary Reflection -->
    <item android:top="30dp" android:left="30dp" android:right="10dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_30"
                android:endColor="@color/transparent"
                android:angle="225"/>
        </shape>
    </item>
    
</layer-list> 