<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/shadow_light"
                android:endColor="@color/transparent"
                android:angle="90"/>
        </shape>
    </item>
    
    <!-- Main Glass Background -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/surface_glass"
                android:endColor="@color/glass_blue"
                android:angle="90"/>
        </shape>
    </item>
    
    <!-- Glass Border -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/transparent_white_30"/>
        </shape>
    </item>
    
    <!-- Inner Glow -->
    <item android:top="2dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient android:type="radial"
                android:centerX="0.3" android:centerY="0.2"
                android:gradientRadius="80%"
                android:startColor="@color/glow_white"
                android:endColor="@color/transparent"/>
        </shape>
    </item>
    
    <!-- Highlight Strip -->
    <item android:top="4dp" android:left="8dp" android:right="40dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_50"
                android:endColor="@color/transparent"
                android:angle="45"/>
        </shape>
    </item>
    
    <!-- Bottom Reflection -->
    <item android:top="6dp" android:left="20dp" android:right="8dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient android:type="linear"
                android:startColor="@color/transparent_white_20"
                android:endColor="@color/transparent"
                android:angle="225"/>
        </shape>
    </item>
    
</layer-list> 